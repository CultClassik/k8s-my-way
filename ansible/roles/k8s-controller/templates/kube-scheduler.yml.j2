---
apiVersion: kubescheduler.config.k8s.io/v1alpha1
kind: KubeSchedulerConfiguration
clientConnection:
  kubeconfig: /var/lib/kubernetes/kube-scheduler.kubeconfig
healthzBindAddress: {{ hostvars[inventory_hostname]['ansible_' + private_if].ipv4.address }}:10251
leaderElection:
  leaderElect: true
metricsBindAddress: {{ hostvars[inventory_hostname]['ansible_' + private_if].ipv4.address }}:10251